<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lindsaymwilliams.todoapp.EditItemActivity">

    <TextView android:text="@string/edit_screen_purpose" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editScreenPurpose"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textColor="#ff000000"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editItemText"
        android:layout_below="@+id/editScreenPurpose"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saveTxt"
        android:id="@+id/savebutton"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/editItemText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onSave" />

</RelativeLayout>
